@model IEnumerable<Dgg.Cqrs.Sample.Core.Presentation.Models.DefectHandling.Issue>

@{
	ViewBag.Title = "All Issues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Issues</h2>

<p>
    @Html.ActionLink("Open", "Open")
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item, "_issue")
        </td>        
        <td>@Html.Partial("_Actions", item)</td>
    </tr>
}

</table>
