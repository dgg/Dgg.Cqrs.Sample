@model IEnumerable<Dgg.Cqrs.Sample.Core.Presentation.Models.Admin.Solution>

@{
    ViewBag.Title = "All Solutions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Solutions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Rename", "Rename", new { id=item.Id })
        </td>
    </tr>
}

</table>
