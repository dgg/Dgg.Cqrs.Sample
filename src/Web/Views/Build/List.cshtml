@model IEnumerable<Dgg.Cqrs.Sample.Core.Presentation.Models.Admin.Build>

@{
    ViewBag.Title = "All Builds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All  Builds</h2>

<p>
    @Html.ActionLink("Create", "Create") &nbsp; @Html.ActionLink("Bulk Create", "BulkCreate")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th></th>        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       <td>@Html.Partial("_Actions", item)</td>
    </tr>
}

</table>
