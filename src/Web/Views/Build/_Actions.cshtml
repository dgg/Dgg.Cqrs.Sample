@model Dgg.Cqrs.Sample.Core.Presentation.Models.Admin.Build
@using Dgg.Cqrs.Sample.Core.Presentation.Controllers
@using Dgg.Cqrs.Sample.Web.Views
<ul class="actions">
	<li>
		@(Html.Action<BuildController>("Rename", c => c.Rename(new Guid(Model.Id)), "~/Content/img/pencil.png"))
	</li>
	<li>
		@(Html.MaybeAction<BuildController>("Assign", c => c.Assign(new Guid(Model.Id)), "~/Content/img/tag_blue_add.png").DisabledIf(Model.AssignedTo != null))
	</li>
	<li>
		@(Html.MaybePostAction<BuildController>("Un-Assign", c => c.UnAssign(new Guid(Model.Id)), "~/Content/img/tag_blue_delete.png").DisabledIf(Model.AssignedTo == null))
	</li>
	<li>
		@(Html.DeleteAction<BuildController>("Delete", c => c.Delete(Guid.Parse(Model.Id)), "~/Content/img/cross.png"))
	</li>
</ul>
